{
    "compilerOptions": {
        "target": "es2017",
        "moduleResolution": "Node",
        "outDir": "dist/",
        "baseUrl": "./",
        "sourceMap": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "allowUmdGlobalAccess": true,
        "noImplicitThis": false,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/",
    ]
}